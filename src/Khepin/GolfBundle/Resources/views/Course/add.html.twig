{% extends "::base.html.twig" %}

{% block title %}Add a new golf course{% endblock %}

{% block body %}
{{ form_errors(form) }}
<form action="{{ path('course_create') }}" method="post">
    <table>
        <tr>
            <td>{{ form_label(form.name) }}</td>
            <td>{{ form_widget(form.name) }}</td>
            <td>{{ form_errors(form.name) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.city) }}</td>
            <td>{{ form_widget(form.city) }}</td>
            <td>{{ form_errors(form.city) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.holes_number) }}</td>
            <td>{{ form_widget(form.holes_number) }}</td>
            <td>{{ form_errors(form.holes_number) }}</td>
        </tr>
    </table>
    {{ form_rest(form) }}
    <input type="submit" />
</form>
{% endblock %}